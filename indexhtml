      <label for="level">Level:</label>
      <select id="level">
        <!-- Options from 1 to 24 -->
        {% for i in range(1, 25) %}
        <option value="{{ i }}">{{ i }}</option>
        {% endfor %}</select
      ><br />

      <label for="archetype">Archetype:</label>
      <select id="archetype">
        <option value="Archer">Archer</option>
