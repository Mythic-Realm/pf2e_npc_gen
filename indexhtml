        <option value="Berserker">Berserker</option>
        <option value="Cleric">Cleric</option>
        <!-- Add the rest of the archetypes --></select
      ><br />

      <label for="difficulty">Difficulty:</label>
      <select id="difficulty">
        <option value="low">Low</option>
        <option value="mod">Moderate</option>
        <option value="high">High</option></select
      ><br />

      <input type="checkbox" id="spellcaster" /> Allow the NPC to cast Spells<br />
      <input type="checkbox" id="include_universal" /> Include Universal
      Talents<br />
      <input type="checkbox" id="include_rare" /> Include Rare Talents<br />

      <button class="btn" id="generate">Generate</button>

      <div class="output" id="npc_output"></div>
