    <py-script>
      from npc_data_refactored import generate_npc def generate_npc_data():
      level = int(Element("level").element.value) archetype =
      Element("archetype").element.value difficulty =
      Element("difficulty").element.value is_spellcaster =
      Element("spellcaster").element.checked include_universal =
      Element("include_universal").element.checked include_rare =
      Element("include_rare").element.checked npc_data = generate_npc(level,
      archetype, difficulty, is_spellcaster, include_universal, include_rare)
      Element("npc_output").write(npc_data) Element("generate").element.onclick
      = generate_npc_data
    </py-script>
